<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>                
                <value id="cybersource" type="host">https://testup.cybersource.com</value>
                <value id="cybersource_prod" type="host">https://up.cybersource.com</value>
            </values>
        </policy>        
        <policy id="connect-src">
            <values>
                <value id="cybersource-connect" type="host">testup.cybersource.com</value>
                <value id="cybersource-connect-prod" type="host">up.cybersource.com</value>
            </values>
        </policy>

    </policies>
</csp_whitelist>
